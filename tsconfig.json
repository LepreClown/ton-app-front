{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./src",
		"paths": {
			"@/components/*": ["components/*"],
			"@/ui/*": ["components/ui/*"],
			"@/screens/*": ["components/screens/*"],
			"@/hooks/*": ["hooks/*"],
			"@/services/*": ["services/*"],
			"@/providers/*": ["providers/*"],
			"@/build/*": ["build/*"],
			"@/assets/*": ["assets/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"node_modules/hash.js/lib/hash.d.ts",
		"node_modules/hash.js/lib/hash.d.ts"
	],
	"exclude": ["node_modules"]
}
